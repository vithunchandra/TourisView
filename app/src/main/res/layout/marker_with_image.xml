<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Marker Background -->
    <ImageView
        android:id="@+id/marker_background"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:rotation="45"
        android:scaleType="centerInside"
        android:src="@drawable/marker_background_xml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Image Inside Marker -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_inside_marker"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_placeholder"
        app:civ_border_color="@color/blue"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/marker_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/marker_background"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>